{
  "name": "root",
  "private": true,
  "scripts": {
    "start": "yarn workspace @animus-ui/docs dev",
    "build": "yarn build-all && yarn workspace @animus-ui/docs build",
    "build-changed": "lerna run lernaBuildTask --since --include-dependencies",
    "build-all": "lerna run lernaBuildTask",
    "lint": "eslint --ignore-path .eslintignore \"./**/*.{mdx,js,ts,tsx,json}\" --max-warnings 0",
    "format": "prettier --ignore-path .prettierignore \"./**/*.{mdx,js,ts,tsx,json}\" --write",
    "test": "jest",
    "compile": "lerna run compile",
    "lint:fix": "yarn lint --fix",
    "format:fix": "yarn format --write",
    "verify": "yarn compile && yarn lint && yarn format"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.12.17",
    "@babel/core": "^7.12.17",
    "@babel/preset-typescript": "^7.12.17",
    "@babel/runtime": "^7.12.18",
    "@codecademy/eslint-config": "^7.0.2",
    "@codecademy/prettier-config": "^0.2.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/node": "^18.15.0",
    "@types/stylis": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "babel-jest": "27.4.6",
    "babel-preset-codecademy": "6.0.0",
    "csstype": "3.0.10",
    "eslint": "^8.8.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-mdx": "^1.16.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-jest-react": "^0.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.1.5",
    "jest": "26.6.3",
    "jest-environment-jsdom": "^26.6.2",
    "jest-environment-jsdom-global": "2.0.4",
    "jest-junit": "^12.0.0",
    "lerna": "4.0.0",
    "prettier": "2.5.1",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "@emotion/babel-plugin": "11.7.2",
    "@emotion/jest": "11.7.1",
    "@emotion/react": "11.7.1",
    "@emotion/styled": "11.6.0",
    "lodash": "4.17.21",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "17.0.2",
    "rollup": "3.19.1",
    "rollup-plugin-typescript2": "0.34.1"
  }
}
