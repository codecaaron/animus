{
  "name": "root",
  "private": true,
  "engines": {
    "node": "^20.19.0",
    "npm": "please-use-yarn"
  },
  "scripts": {
    "start": "yarn workspace @animus-ui/docs dev",
    "build": "yarn nx run-many --target=build",
    "build-changed": "yarn nx affected --target=build",
    "build-all": "yarn nx run-many --target=build",
    "lint": "biome check --linter-enabled=true --formatter-enabled=false",
    "format": "biome check --linter-enabled=false --formatter-enabled=true",
    "test": "jest",
    "compile": "lerna run compile",
    "lint:fix": "biome check --linter-enabled=true --formatter-enabled=false --write",
    "format:fix": "biome format --write",
    "check": "biome check",
    "check:fix": "biome check --write",
    "verify": "yarn compile && yarn check"
  },
  "workspaces": {
    "packages": ["packages/*"],
    "nohoist": ["**/@types"]
  },
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.3",
    "@babel/preset-typescript": "^7.27.1",
    "@babel/runtime": "^7.21.3",
    "@biomejs/biome": "^2.0.6",
    "@emotion/babel-plugin": "11.13.5",
    "@emotion/jest": "11.13.0",
    "@nrwl/cli": "^15.8.6",
    "@nrwl/nx-cloud": "^15.2.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@types/jest": "^29.4.3",
    "@types/lodash": "^4.14.178",
    "@types/node": "^18.15.0",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.2",
    "@types/stylis": "^4.2.7",
    "babel-jest": "29.5.0",
    "babel-preset-codecademy": "7.1.0",
    "csstype": "3.1.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-environment-jsdom-global": "^4.0.0",
    "jest-junit": "^12.0.0",
    "lerna": "6.5.1",
    "lodash": "4.17.21",
    "nx": "15.8.6",
    "prettier": "2.5.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rollup": "3.19.1",
    "rollup-plugin-typescript2": "0.36.0",
    "typescript": "5.8.3"
  }
}
