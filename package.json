{
  "name": "root",
  "private": true,
  "engines": {
    "node": "^20",
    "npm": "please-use-yarn"
  },
  "scripts": {
    "start": "yarn workspace @animus-ui/docs dev",
    "build": "yarn nx run-many --target=build",
    "build-changed": "yarn nx affected --target=build",
    "build-all": "yarn nx run-many --target=build",
    "lint": "eslint \"./**/*.{mdx,js,ts,tsx,json}\" --max-warnings 0",
    "format": "prettier --ignore-path .prettierignore \"./**/*.{mdx,js,ts,tsx,json}\" --write",
    "test": "jest",
    "compile": "lerna run compile",
    "lint:fix": "yarn lint --fix",
    "format:fix": "yarn format --write",
    "verify": "yarn compile && yarn lint && yarn format"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@types"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.3",
    "@babel/preset-typescript": "^7.27.1",
    "@babel/runtime": "^7.21.3",
    "@codecademy/eslint-config": "^8.2.0",
    "@codecademy/prettier-config": "^0.2.0",
    "@emotion/babel-plugin": "11.13.5",
    "@emotion/jest": "11.13.0",
    "@nrwl/cli": "^15.8.6",
    "@nrwl/nx-cloud": "^15.2.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@types/jest": "^29.4.3",
    "@types/lodash": "^4.14.178",
    "@types/node": "^18.15.0",
    "@types/react": "18.0.28",
    "@types/stylis": "^4.2.7",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "babel-jest": "29.5.0",
    "babel-preset-codecademy": "7.1.0",
    "csstype": "3.1.3",
    "eslint": "^8.11.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.1",
    "eslint-mdx": "^3.4.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-react": "^0.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-environment-jsdom-global": "^4.0.0",
    "jest-junit": "^12.0.0",
    "lerna": "6.5.1",
    "lodash": "4.17.21",
    "nx": "15.8.6",
    "prettier": "3.5.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rollup": "3.19.1",
    "rollup-plugin-typescript2": "0.36.0",
    "typescript": "5.8.3"
  }
}
